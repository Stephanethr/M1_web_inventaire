---
import Layout from "../layouts/Layout.astro";
import InfoPersoContainer from "../components/InfoPersoContainer.astro";
import Disconnect from "../components/Disconnect.astro";
---

<Layout title="Login - antocreadev">
  <main
  class="min-h-screen min-w-screen "
  >
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold text-center my-8">
        Mes informations
      </h1>
      <InfoPersoContainer />
      <br/>
      <Disconnect 
      href="/login"
      />
    
    </div>
  </main>
</Layout>

<script>
  try {
    const response = await fetch(`${import.meta.env.PUBLIC_BASE_API_URL}/users/me`, {
      headers: {
        "Content-Type": "application/x-www-form-urlencoded",
        "Authorization": `Bearer ${localStorage.getItem("token")}`
      }
    });

    if (!response.ok) {
      throw new Error('Network response was not ok');
    }

    const data = await response.json();
    console.log(data);
  } catch (error) {
    console.error('Error fetching user data:', error);
  }
</script>



